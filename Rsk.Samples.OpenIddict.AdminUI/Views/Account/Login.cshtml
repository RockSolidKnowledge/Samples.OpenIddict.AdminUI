@model Rsk.Samples.OpenIddict.AdminUiIntegration.Models.LoginInputModel

@section banner
{
<div class="bg-green-600 text-white px-6 py-8 md:py-12 lg:py-16 relative z-10">
	<div class="container w-full text-left mx-auto self-center max-w-[1200px]">
		<div class="max-w-lg">
			<div class="flex flex-wrap items-center">
				<h1 class="font-bold w-full text-3xl lg:text-4xl leading-tight">Login</h1>
			</div>
		</div>
	</div>
</div>
}

@await Html.PartialAsync("_ValidationSummary")


<form asp-route="Login">
	<input type="hidden" asp-for="ReturnUrl" />
	<div class="form-group">
		<label class="form-label" asp-for="Username"></label>
		<input class="form-control" asp-for="Username" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Password"></label>
		<input type="password" class="form-control" asp-for="Password" autocomplete="off" />
	</div>
	<div class="form-group">
		<ul class="form-checks">
			<li class="form-checks__item">
				<label class="form-checks__label" asp-for="RememberMe">
					<input class="form-checks__input" asp-for="RememberMe">
					<span class="form-checks__text">Remember me</span>
				</label>
			</li>
		</ul>
	</div>
	<div class="form-actions">
		<button id="LoginBtn" class="btn btn-accent" name="button" value="login">Login</button>
		<button class="btn btn-text ml-6" name="button" value="cancel">Cancel</button>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
